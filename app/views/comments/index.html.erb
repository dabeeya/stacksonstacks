<h1>All Comments</h1> 

<div id="comments">
<% for comment in @comments %>
  <div class="comment">
    <strong>Body: </strong><%= comment.body %>
  </div>
<% end %>
</div>

<h2>New Comment</h2>

<%= form_for [@commentable, Comment.new] do |f| %>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  
  <p><%= f.submit "Submit" %></p>
<% end %>